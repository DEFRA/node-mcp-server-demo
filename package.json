{
  "name": "node-mcp-server-demo",
  "version": "0.1.0",
  "description": "node-mcp-server-demo",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "pretest": "npm run test:lint",
    "docker:debug": "docker compose -f compose.yaml -f compose.debug.yaml -p 'node-mcp-server-demo' up",
    "docker:test": "docker compose down -v && docker compose -f compose.yaml -f compose.test.yaml run  --build --rm 'node-mcp-server-demo'",
    "docker:test:watch": "docker compose down -v && docker compose -f compose.yaml -f compose.test.yaml -f compose.test.watch.yaml run  --build --rm 'node-mcp-server-demo'",
    "test": "rm -rf ./coverage/** && vitest run --coverage",
    "test:watch": "vitest watch",
    "test:lint": "npx eslint",
    "format": "npx eslint . --fix",
    "start:watch": "nodemon --watch src --exec 'node src/index.js'",
    "start:debug": "nodemon --watch src --exec 'node --inspect-brk=0.0.0.0:9232 src/index.js'",
    "start": "node src/index.js"
  },
  "author": "Defra DDTS",
  "contributors": [],
  "dependencies": {
    "@defra/hapi-tracing": "1.0.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.3.12",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "aws-embedded-metrics": "4.2.0",
    "aws4": "1.13.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "global-agent": "3.0.0",
    "hapi-pino": "12.1.0",
    "hapi-pulse": "3.0.1",
    "http-status-codes": "2.3.0",
    "https-proxy-agent": "7.0.5",
    "joi": "17.13.3",
    "mongo-locks": "3.0.2",
    "mongodb": "6.10.0",
    "node-fetch": "3.3.2",
    "pino": "9.5.0",
    "pino-pretty": "13.0.0",
    "undici": "^7.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.1.4",
    "autoprefixer": "10.4.20",
    "eslint": "^9.28.0",
    "neostandard": "^0.12.1",
    "nodemon": "3.1.7",
    "npm-run-all": "4.1.5",
    "vitest": "3.1.4"
  }
}
